<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1">
    <LinearLayout
        android:id="@+id/ll_city_location"
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="20px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前定位城市:"
            android:textSize="25px"/>
        <TextView
            android:id="@+id/city_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:layout_marginLeft="20px"
            android:textSize="30px"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/city_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="50px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史访问城市"
                android:textColor="@color/green"
                android:textSize="25px"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/city_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除历史记录"
                android:textColor="@color/green"
                android:textSize="25px"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>


        <com.emiancang.emiancang.city.SodukuGridView
            android:id="@+id/city_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:paddingLeft="20px"
            android:paddingBottom="20px"
            android:paddingRight="50px"
            android:numColumns="auto_fit"
            android:verticalSpacing="30px"
            android:horizontalSpacing="20px"
            android:listSelector="#00000000"
            android:scrollbars="none">
        </com.emiancang.emiancang.city.SodukuGridView>
    </LinearLayout>
</LinearLayout>