<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="28px"
            android:textColor="@color/gray"
            android:layout_marginLeft="20px"
            />

        <LinearLayout
            android:id="@+id/ll_find_money_publish_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/tv_find_money_publish_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择类型"
                android:textColor="@color/brown"
                android:textSize="28px"
                android:drawableRight="@drawable/icon_right_arrow"
                android:drawablePadding="10px"
                android:layout_marginRight="20px"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_line"/>

    <EditText
        android:id="@+id/edit_find_money_publish"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:hint="请输入您希望平台帮您解决的需求，平台会有客服联系您"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="10px"
        android:textSize="28px"
        android:gravity="top"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_find_money_publish_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:layout_marginRight="120px"
        android:layout_marginTop="40px"
        android:text="提交"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:background="@drawable/background_login_btn_selector"/>

</LinearLayout>