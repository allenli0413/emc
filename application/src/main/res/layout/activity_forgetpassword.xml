<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical">
    <View style="@style/line_h"
        android:layout_marginTop="40px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="145px"
                android:layout_height="match_parent"
                android:paddingLeft="20px"
                android:text="账号"
                android:textColor="@color/black1"
                android:gravity="left|center_vertical"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="85px"
                android:background="@color/c9"
                android:hint="输入11位手机号"
                android:paddingLeft="10px"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="30px"
                android:textColor="@color/c4"
                android:textColorHint="@color/c5" />
        </LinearLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/imageView"
            android:layout_width="145px"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:text="验证码"
            android:textColor="@color/black1"
            android:gravity="left|center_vertical"/>

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="wrap_content"
            android:layout_height="85px"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tv_send_verification"
            android:layout_toRightOf="@+id/imageView"
            android:background="@null"
            android:hint="输入短信验证码"
            android:paddingLeft="10px"
            android:textColor="@color/c4"
            android:maxLength="6"
            android:inputType="number"
            android:textSize="30px"
            android:textColorHint="@color/c5" />

        <TextView
            android:id="@+id/tv_send_verification"
            android:layout_width="wrap_content"
            android:layout_height="55px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:background="@drawable/background_login_btn_selector"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="10px"
            android:paddingRight="15px"
            android:text="获取验证码"
            android:textSize="20px"
            android:textColor="@color/white" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/imageView2"
            android:layout_width="145px"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:text="密码"
            android:textColor="@color/black1"
            android:gravity="left|center_vertical"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0px"
            android:layout_height="85px"
            android:layout_weight="1"
            android:background="@color/c9"
            android:hint="输入6-20位数字字母组合密码"
            android:paddingLeft="7px"
            android:inputType="textPassword"
            android:textColor="@color/c4"
            android:textSize="30px"
            android:textColorHint="@color/c5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/c9"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="30px">

            <ImageView
                android:id="@+id/iv_xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/hide" />

        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_h"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="145px"
            android:layout_height="match_parent"
            android:paddingLeft="20px"
            android:text="确认密码"
            android:textColor="@color/black1"
            android:gravity="left|center_vertical"/>
        <EditText
            android:id="@+id/password_repet_edit"
            android:layout_width="0px"
            android:layout_height="85px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="再次输入账号密码"
            android:paddingLeft="7px"
            android:inputType="textPassword"
            android:textColor="@color/c4"
            android:textSize="30px"
            android:textColorHint="@color/c5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/c9"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="30px">
            <ImageView
                android:id="@+id/password_repet_xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/hide" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_h"/>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/background_login_btn_selector"
        android:gravity="center_vertical|center_horizontal"
        android:text="提交"
        android:textSize="40px"
        android:textColor="@color/white" />
</LinearLayout>