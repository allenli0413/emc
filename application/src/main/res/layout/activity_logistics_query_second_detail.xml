<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/c1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_start_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起运地"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:padding="10px"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_end_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:padding="10px"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_transport_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运输方式"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:padding="10px"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_standard_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收费标准"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:padding="10px"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_transport_ability_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运输能力"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:padding="10px"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_valid_period_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期限"
                    android:textSize="12dp"
                    android:textColor="@color/gray"
                    android:padding="10px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30px"
                android:layout_marginRight="20px">

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_start_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c2"
                    android:textSize="12dp"
                    android:padding="10px"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_end_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c2"
                    android:textSize="12dp"
                    android:padding="10px"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_transport_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c2"
                    android:textSize="12dp"
                    android:padding="10px"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c2"
                    android:textSize="12dp"
                    android:padding="10px"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_transport_ability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c2"
                    android:textSize="12dp"
                    android:padding="10px"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_activity_logistics_query_second_detail_valid_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c2"
                    android:textSize="12dp"
                    android:padding="10px"
                    android:singleLine="true"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="联系人信息"
                android:textSize="12dp"
                android:textColor="@color/green_text_second"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line_second"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="20px">

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="物流企业信息"
                android:textSize="12dp"
                android:textColor="@color/green_text_second"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line_second"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_enterprise_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业地址"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_enterprise_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_fax_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="传真号码"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_zip_code_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮政编码"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_email_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电子邮件"
                        android:textSize="12dp"
                        android:textColor="@color/gray"
                        android:padding="10px"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="20px">

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_enterprise_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_enterprise_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_fax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_zip_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tv_activity_logistics_query_second_detail_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c2"
                        android:textSize="12dp"
                        android:padding="10px"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>