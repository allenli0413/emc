<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1">
    <View style="@style/line_h"
        android:layout_marginTop="10px"/>
    <RelativeLayout
        android:id="@+id/enterprise_name_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_enterprise_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="企业名称"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />
        <TextView
            android:id="@+id/enterprise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@+id/tv_enterprise_name_title"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="30px"
            android:text="名称"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:id="@+id/enterprise_type_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_enterprise_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="企业类型"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />
        <TextView
            android:id="@+id/enterprise_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@+id/tv_enterprise_type_title"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="30px"
            android:text="仓库企业"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:id="@+id/enterprise_location_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_enterprise_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="企业所在地"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />
        <TextView
            android:id="@+id/enterprise_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@+id/tv_enterprise_location_title"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="30px"
            android:text="安徽省"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:id="@+id/enterprise_site_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_enterprise_site_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="企业地址"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />
        <TextView
            android:id="@+id/enterprise_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@+id/tv_enterprise_site_title"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="30px"
            android:text="地址信息"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:id="@+id/enterprise_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_enterprise_connect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="联系电话"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />
        <TextView
            android:id="@+id/enterprise_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_toRightOf="@+id/tv_enterprise_connect_title"
            android:layout_marginLeft="20px"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="30px"
            android:text="12345678901"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:id="@+id/enterprise_code_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="企业组织机构代码"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />

        <ImageView
            android:id="@+id/enterprise_code_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
            android:src="@drawable/icon_goto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/enterprise_code_goto"
            android:textSize="30px"
            android:text="查看"
            android:textColor="@color/c5" />

        <View style="@style/line_h"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/enterprise_revenue_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="税务登记证"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />

        <ImageView
            android:id="@+id/enterprise_revenue_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
            android:src="@drawable/icon_goto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/enterprise_revenue_goto"
            android:textSize="30px"
            android:text="查看"
            android:textColor="@color/c5" />

        <View style="@style/line_h"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/enterprise_business_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="工商营业执照"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />

        <ImageView
            android:id="@+id/enterprise_business_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
            android:src="@drawable/icon_goto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/enterprise_business_goto"
            android:textSize="30px"
            android:text="查看"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
    <RelativeLayout
        android:id="@+id/enterprise_authorization_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="企业认证授权书"
            android:layout_marginLeft="20px"
            android:textSize="35px"
            android:textColor="@color/c2" />

        <ImageView
            android:id="@+id/enterprise_authorization_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
            android:src="@drawable/icon_goto" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/enterprise_authorization_goto"
            android:textSize="30px"
            android:text="查看"
            android:textColor="@color/c5" />
    </RelativeLayout>
    <View style="@style/line_h"/>
</LinearLayout>