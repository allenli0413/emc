<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1">
    <RelativeLayout
        android:id="@+id/rightPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginRight="30px"
        android:layout_alignParentRight="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rightAvatar"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_alignParentRight="true"
            fresco:placeholderImage="@drawable/default_avater"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />
        <RelativeLayout
            android:id="@+id/right_Message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="center"
            android:clickable="true"
            android:longClickable="true"
            android:layout_toLeftOf="@id/rightAvatar"
            android:background="@drawable/bg_bubble_blue">
            <TextView
                android:id="@+id/rightMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingRight="10px"
                android:textColor="@color/white"
                android:textSize="30px"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/rightDate"
            android:layout_alignRight="@id/right_Message_layout"
            android:layout_below="@id/right_Message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10px"
            android:textSize="25px"
            android:textColor="@color/c5"
            android:layout_marginTop="20px"
            android:text="2016-09-04 17:01"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/leftPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginLeft="30px">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/leftAvatar"
            android:layout_width="85px"
            android:layout_height="85px"
            android:layout_alignParentLeft="true"
            fresco:placeholderImage="@drawable/default_avater"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/leftAvatar"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/left_Message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="120px"
                android:paddingTop="20px"
                android:paddingBottom="20px"
                android:paddingRight="5px"
                android:paddingLeft="30px"
                android:clickable="true"
                android:longClickable="true"
                android:gravity="center"
                android:background="@drawable/bg_bubble_gray">
                <TextView
                    android:id="@+id/leftMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingRight="10px"
                    android:textSize="30px"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/leftDate"
                android:layout_alignRight="@id/left_Message_layout"
                android:layout_below="@id/left_Message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:textSize="25px"
                android:textColor="@color/c5"
                android:layout_marginTop="20px"
                android:text="2016-09-04 17:01"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>