<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_quality_contrast_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_quality_contrast_detail_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="分享"
            android:textColor="@color/c2"
            android:textSize="30px"
            android:gravity="center"
            android:padding="20px"/>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/gray_line"/>

        <TextView
            android:id="@+id/tv_quality_contrast_detail_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20px"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:background="@color/green"/>

    </LinearLayout>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/myProgressBar"
        android:layout_width="match_parent"
        android:progressDrawable="@drawable/progressbar"
        android:layout_height="10px"
        />
    <WebView
        android:id="@+id/wv_quality_contrast_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myProgressBar"
        android:layout_above="@+id/ll_quality_contrast_detail_bottom"/>

</RelativeLayout>