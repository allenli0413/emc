<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1">
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/red_packet_type"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/red_packet_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择红包类型"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_centerInParent="true"
                android:drawablePadding="20px"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/red_packet_type_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pull_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80px"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"/>
        <RelativeLayout
            android:id="@+id/shopping_cart_order"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/red_packet_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择时间范围"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_centerInParent="true"
                android:drawablePadding="20px"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/red_packet_order_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pull_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80px"/>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/c5"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"></View>

    </LinearLayout>
    <View style="@style/line_h"
        android:background="@color/light_grey"></View>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:background="@color/white"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计返现"
                    android:textSize="37px"
                    android:layout_marginLeft="20px"/>
                <TextView
                    android:id="@+id/red_packet_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="37px"
                    android:textColor="@color/half_red_color1"
                    android:layout_marginLeft="40px"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_above="@+id/bottom_bar_view"
                android:layout_height="0px"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iamge_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>