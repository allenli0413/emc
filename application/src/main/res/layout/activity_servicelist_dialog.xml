<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550px"
    android:layout_height="290px"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="25px">
        <TextView
            android:id="@+id/servicelist_dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:text="标题"
            android:gravity="center"
            android:textColor="@color/c2" />
        <TextView
            android:id="@+id/servicelist_dialog_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:text="@string/show_login_hint"
            android:gravity="left"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:layout_marginTop="20px"
            android:textColor="@color/c5" />
    </LinearLayout>
    <View style="@style/line_h"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/servicelist_dialog_cancel_tv"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background_service_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textSize="28px"
            android:textColor="@color/c6" />
        <View style="@style/line_h"
            android:layout_width="1px"
            android:layout_height="match_parent"></View>
        <TextView
            android:id="@+id/servicelist_dialog_verify_tv"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background_service_btn_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="确认"
            android:textSize="28px"
            android:textColor="@color/c6" />
    </LinearLayout>
</LinearLayout>