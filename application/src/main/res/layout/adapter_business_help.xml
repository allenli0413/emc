<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20px">

            <com.emiancang.emiancang.view.CircleImageView
                android:id="@+id/iv_adapter_business_help_avatar"
                android:layout_width="36px"
                android:layout_height="36px"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20px">

                <TextView
                    android:id="@+id/tv_adapter_business_help_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34px"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/c2" />

                <TextView
                    android:id="@+id/tv_adapter_business_help_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c4"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="24px"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/iv_adapter_business_help_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/online_business"/>

        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/tv_adapter_business_help_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:textColor="@color/c2"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:singleLine="true"
        android:ellipsize="end"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/c1"/>

</LinearLayout>