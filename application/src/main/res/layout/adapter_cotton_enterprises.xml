<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="212dp"
    android:layout_height="match_parent"
    android:layout_marginTop="20px"
    android:layout_marginBottom="20px"
    android:layout_marginLeft="20px"
    android:background="@drawable/bg_edit_search">

    <LinearLayout
        android:id="@+id/ll_adapter_cotton_enterprieses_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="15px">

        <TextView
            android:id="@+id/tv_adapter_cotton_enterprises_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新疆利华棉业股份有限公司第四棉花加工厂"
            android:textColor="@color/c2"
            android:textSize="32px"/>

        <TextView
            android:id="@+id/tv_adapter_cotton_enterprises_location"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="新疆巴音郭楞库尔勒新华路龙兴大厦二楼"
            android:textColor="@color/c2"
            android:textSize="24px"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="10px"/>

        <TextView
            android:id="@+id/tv_adapter_cotton_enterprises_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="20px"
            android:text="1.6km"
            android:textColor="@color/yellow_text"
            android:textSize="24px"
            android:drawableLeft="@drawable/icon_guide"
            android:drawablePadding="10px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>

        <RelativeLayout
            android:id="@+id/rl_adapter_cotton_enterprises_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始导航"
                android:textSize="24px"
                android:textColor="@color/green_text"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/icon_guide"
                android:drawablePadding="20px"
                android:paddingTop="20px"
                android:paddingBottom="20px"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>