<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到"
            android:layout_margin="20px"
            android:layout_gravity="left"
            android:textColor="@color/black"
            style="@style/Text1"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/share_pengyouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="朋友圈"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/button_share_friend"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/share_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="微信好友"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/button_share_weixin"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QQ"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/button_share_qq"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新浪微博"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableTop="@drawable/button_share_weibo"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/btn_cancel"
            android:padding="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            style="@style/Text1"
            android:textColor="@color/black"
            />
    </LinearLayout>
</RelativeLayout>