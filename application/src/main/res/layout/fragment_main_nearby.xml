<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1">

    <include
        layout="@layout/title_search"
        />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/nearby_type_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/red_packet_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业类型"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_centerInParent="true"
                android:drawablePadding="20px"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/red_packet_type_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pull_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80px"/>
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/c5"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"/>
        <RelativeLayout
            android:id="@+id/nearby_distance_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/red_packet_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离排序"
                android:textColor="@color/black"
                android:textSize="30px"
                android:layout_centerInParent="true"
                android:drawablePadding="20px"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/red_packet_order_iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pull_down"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80px"/>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/c5"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"></View>

    </LinearLayout>
    <View style="@style/line_h"
        android:background="@color/c5"></View>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout
            android:id="@+id/nestRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:scrollbars="none"/>
        </cn.appsdream.nestrefresh.normalstyle.NestRefreshLayout>
    </FrameLayout>

</LinearLayout>