<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shape"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivStepperMinus"
        android:layout_width="@dimen/snappingstepper_width_button"
        android:layout_height="match_parent"
        android:background="@drawable/sl_snappingstepper_button"
        android:clickable="true"
        android:padding="@dimen/snappingstepper_padding_button"
        android:scaleType="centerInside"
        android:src="@drawable/icon_minus_selector" />
    <!-- ic_snappingstepper_minus-->


    <ImageView
        android:id="@+id/ivStepperPlus"
        android:layout_width="@dimen/snappingstepper_width_button"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/sl_snappingstepper_button"
        android:clickable="true"
        android:padding="@dimen/snappingstepper_padding_button"
        android:scaleType="centerInside"
        android:src="@drawable/icon_add_selector" />
    <!-- ic_snappingstepper_plus-->

    <TextView
        android:id="@+id/tvStepperContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivStepperPlus"
        android:layout_toRightOf="@id/ivStepperMinus"
        android:background="#ffffff"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/snappingstepper_textSize"
        tools:text="100" />


</RelativeLayout>